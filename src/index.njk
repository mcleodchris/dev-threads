---
layout: default
pagination:
    data: profileData
    size: 50
---

<main>
  <header class="mb-24 bg-sky-700 p-4">
    <h1 class="text-3xl uppercase tracking-wide font-bold text-white">{{ metadata.title }}
      <small class="uppercase tracking-wide text-xl font-light block">{{ metadata.description }}</small>
    </h1>
  </header>
  {% include "pagination.njk" %}
  <section class="container mx-auto grid md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 xl:grid-rows-10 gap-4">
    {%- for profile in pagination.items %}
      <div class="bg-white shadow-md hover:shadow-lg grid col-span-1 w-100 p-4 border grid-cols-2 border-slate-300 rounded">
        <div class="items-center grid col-span-2 grid-cols-2">
          <h2 class="text-lg font-bold col-span-1">
            <a href="https://threads.net/@{{ profile.username }}">{{ profile.full_name }}</a>
            <small class="block text-slate-700 font-normal">
              <a href="https://threads.net/@{{ profile.username }}">@{{ profile.username }}</a>
            </small>
            {%- if profile.is_private %}
              <small class="is-private">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                  <path
                    fill-rule="evenodd"
                    d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0
                      00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z"
                    clip-rule="evenodd"/>
                </svg>
              </small>
            {%- endif %}
            {%- if profile.is_verified %}
              <small class="is-verified">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                  <path
                    fill-rule="evenodd"
                    d="M8.603 3.799A4.49 4.49 0 0112 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 013.498 1.307 4.491 4.491 0 011.307
                      3.497A4.49 4.49 0 0121.75 12a4.49 4.49 0 01-1.549 3.397 4.491 4.491 0 01-1.307 3.497 4.491 4.491 0 01-3.497 1.307A4.49
                      4.49 0 0112 21.75a4.49 4.49 0 01-3.397-1.549 4.49 4.49 0 01-3.498-1.306 4.491 4.491 0 01-1.307-3.498A4.49 4.49 0 012.25
                      12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 011.307-3.497 4.49 4.49 0 013.497-1.307zm7.007 6.387a.75.75 0
                      10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z"
                    clip-rule="evenodd"/>
                </svg>
              </small>
            {%- endif %}
          </h2>
          <a href="https://threads.net/@{{ profile.username }}" class="col-span-1">{% img profile.profile_pic_url, "profile picture of profile.full_name", "120", "", "rounded-full col-span-1" %}</a>
        </div>
        <div class="col-span-2 my-2 text-sm leading-loose">
          <p>
            {%- replace profile.biography, '\n', '<br>' %}
          </p>
        </div>
        <div class="col-span-2 my-2">
          <a href="https://threads.net/@{{ profile.username }}" class="text-sky-700 hover:text-sky-900 align-baseline text-base">
            Go to profile on Threads
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 inline">
              <path
                fill-rule="evenodd"
                d="M15.75 2.25H21a.75.75 0 01.75.75v5.25a.75.75 0 01-1.5 0V4.81L8.03 17.03a.75.75 0 01-1.06-1.06L19.19 3.75h-3.44a.75.75
                  0 010-1.5zm-10.5 4.5a1.5 1.5 0 00-1.5 1.5v10.5a1.5 1.5 0 001.5 1.5h10.5a1.5 1.5 0 001.5-1.5V10.5a.75.75 0 011.5 0v8.25a3
                  3 0 01-3 3H5.25a3 3 0 01-3-3V8.25a3 3 0 013-3h8.25a.75.75 0 010 1.5H5.25z"
                clip-rule="evenodd"/>
            </svg>
          </a>
        </div>
      </div>
    {%- endfor %}
  </section>
  {% include "pagination.njk" %}
</main>